<!-- views/layout/main.ejs - Main layout template with Tailwind -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="min-h-screen bg-gray-50 flex flex-col">
  <!-- Navigation -->
  <nav class="bg-white shadow-lg border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-3">
          <i class="fas fa-tasks text-blue-600 text-xl"></i>
          <span class="text-xl font-bold text-gray-800">Task Manager</span>
        </div>
        <ul class="hidden md:flex space-x-8">
          <li><a href="/" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Início</a></li>
          <li><a href="/tasks" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Tarefas</a></li>
          <li><a href="/users" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Usuários</a></li>
          <li><a href="/about" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition duration-200">Sobre</a></li>
        </ul>
        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button class="text-gray-700 hover:text-blue-600 focus:outline-none">
            <i class="fas fa-bars text-xl"></i>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1">
    <%- include('../pages/' + contentPage) %>
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t border-gray-200 mt-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="text-center text-gray-600 text-sm">
        <p>&copy; 2025 Task Manager. Todos os direitos reservados.</p>
      </div>
    </div>
  </footer>

  <script src="/js/app.js"></script>
</body>
</html>

<!-- views/pages/home.ejs - Home page content with Tailwind -->
<!-- Hero Section -->
<div class="bg-gradient-to-br from-blue-600 via-blue-700 to-indigo-800 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-28">
    <div class="text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
        Bem-vindo ao <span class="text-blue-200">Task Manager</span>
      </h1>
      <p class="text-xl md:text-2xl text-blue-100 mb-10 max-w-3xl mx-auto leading-relaxed">
        Organize suas tarefas de forma eficiente e produtiva
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="/tasks" class="bg-white text-blue-700 hover:bg-blue-50 px-8 py-4 rounded-lg font-semibold text-lg transition duration-300 transform hover:scale-105 shadow-lg">
          Ver Minhas Tarefas
        </a>
        <a href="/users" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-blue-700 px-8 py-4 rounded-lg font-semibold text-lg transition duration-300 transform hover:scale-105">
          Gerenciar Usuários
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Features Section -->
<div class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Recursos Principais
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Descubra as funcionalidades que tornarão sua gestão de tarefas mais eficiente
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Feature Card 1 -->
      <div class="bg-white rounded-xl p-8 text-center shadow-lg border border-gray-100 hover:shadow-xl transition duration-300 transform hover:-translate-y-2">
        <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
          <i class="fas fa-tasks text-blue-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Gerenciar Tarefas</h3>
        <p class="text-gray-600 leading-relaxed">
          Crie, edite e organize suas tarefas com facilidade
        </p>
      </div>

      <!-- Feature Card 2 -->
      <div class="bg-white rounded-xl p-8 text-center shadow-lg border border-gray-100 hover:shadow-xl transition duration-300 transform hover:-translate-y-2">
        <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
          <i class="fas fa-users text-green-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Colaboração</h3>
        <p class="text-gray-600 leading-relaxed">
          Trabalhe em equipe e compartilhe tarefas
        </p>
      </div>

      <!-- Feature Card 3 -->
      <div class="bg-white rounded-xl p-8 text-center shadow-lg border border-gray-100 hover:shadow-xl transition duration-300 transform hover:-translate-y-2">
        <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
          <i class="fas fa-chart-line text-purple-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Acompanhamento</h3>
        <p class="text-gray-600 leading-relaxed">
          Monitore o progresso e produtividade
        </p>
      </div>

      <!-- Feature Card 4 -->
      <div class="bg-white rounded-xl p-8 text-center shadow-lg border border-gray-100 hover:shadow-xl transition duration-300 transform hover:-translate-y-2">
        <div class="bg-yellow-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
          <i class="fas fa-bell text-yellow-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Lembretes</h3>
        <p class="text-gray-600 leading-relaxed">
          Receba notificações importantes
        </p>
      </div>
    </div>
  </div>
</div>